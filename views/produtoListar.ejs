<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
    integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
</head>
<title><%= titulo %></title>
<style>
  .buton {
    display: flex;
    justify-content: center;
    align-items: center;



  }

  table {
    background-color: rgba(255, 255, 255, 0.774);
    margin-top: 10px;
  }

  body {
    background-image: url('../images/img-body-lista-produto.jpg');
    background-repeat: no-repeat;
    background-size: cover;
    padding-bottom: 10px;
  }
thead{
  background-color: rgba(17, 170, 231, 0.692);
}
tbody{
  overflow-y: scroll;
}
  td {
    font-size: 20px;

  }

  table td,
  table th {
    padding: -0.25rem;
    vertical-align: inherit;
    border-top: 1px solid #dee2e6;
  }

  ul {
    list-style: none;
    display: flex;
    align-items: center;
    justify-content: start;
    padding-inline-start: 0px
  }

  ul li {
    margin-right: 5px;
  }


  a.btn {
    display: flex;
    justify-content: center;
    text-align: center;
    align-items: center;
    border-radius: 100px;
    width: 30px;
    height: 30px;
    font-size: 15px;
    box-shadow: 0px 1px 7px black;

  }

  button.btn.btn-danger {
    display: flex;
    border-radius: 20px;
    border-radius: 40px;
    width: 30px;
    height: 30px;
    justify-content: center;
    align-items: center;
    box-shadow: 0px 1px 7px black
  }

  button.btn.btn-danger span {
    position: relative;
    bottom: 3px;
    left: 1px;
  }

  a.btn#inserir {
    margin-bottom: 20px;
    position: fixed;
    bottom: 1px;
    width: 50px;
    height: 50px;
    font-size: 30px;
    /* right: 154px;
    bottom: 17px; */
  }
  h1{
      background-color:rgba(17, 170, 231, 0.692);
      display: inline;
     border-radius: 5px;
      color: white;
      text-shadow:1px 0px 8px black;
     
    }
</style>


<body>
  <div class="container">
    <h1><%= titulo %> </h1>
    <table  class=" table table-striped table-fixed">

      <thead>

        <tr>

          <th scope="col">id</th>
          <th scope="col">Descrição</th>
          <th scope="col">Valor</th>
          <th scope="col">Ação</th>
        </tr>
      </thead>
      <tbody>
        <% let cont = 0;
                produto.forEach(element => {
                    %>
        <tr>
          <td scope="row"><%=cont%></td>
          <td><%=element.nome%></td>
          <td>R$<%=element.preco%></td>
          <td>
            <div>
              <ul>
                <li><a class="btn btn-primary" href="/produto/<%=cont %>/editar">
                    <span class="material-icons">edit</span>
                  </a></li>
                <li>
                  <form action="/produto/delete/<%=cont%>?_method=DELETE" method="POST">
                    <button class="btn btn-danger" type="submit">
                      <span class="material-icons">delete</span>
                    </button>
                  </form>
                </li>
              </ul>


            </div>
          </td>


        </tr>
        <%cont++;});%>
      </tbody>
    </table>
    <div class="buton"><a id="inserir" class="btn btn-success" href="/produto"> <span
          class="material-icons">add</span></a></div>

  </div>

  
  <!-- Optional JavaScript -->
  <!-- jQuery first, then Popper.js, then Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
    integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous">
  </script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
    integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous">
  </script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
    integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous">
  </script>
</body>

</html>